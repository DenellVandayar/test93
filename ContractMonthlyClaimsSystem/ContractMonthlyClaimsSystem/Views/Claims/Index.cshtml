@{
    ViewData["Title"] = "My Claims";
}
@model IEnumerable<ContractMonthlyClaimsSystem.Models.Claims>

<style>
    body {
        background-image: url('/images/s4.jpg');
        background-size: cover; 
        background-repeat: no-repeat;
        background-position: top;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClaimPeriodsStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimPeriodEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatePerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursWorked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusProg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusAcademic)
            </th>
            <th>Action</th>
            
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.ClaimPeriodsStart)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.ClaimPeriodEnd)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.RatePerHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoursWorked)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.FilePath))
                    {
                        <a href="@item.FilePath" target="_blank">View File</a>
                    }
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusProg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusAcademic)
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "Claims", new { id = item.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Cancel Claim" class="btn btn-danger" onclick="return confirm('Are you sure you want to cancel this claim?');" />
                    }
                </td>
                
            </tr>
        }
    </tbody>
</table>